#Code

fun main() {
    for ( x in 0..3 ){               //Here 10 is inclusive
        println(x)
    }
}


#Output

0
1
2
3



#Code

fun main() {
    for ( x in 0 until 3 ){          //Her 3 is exclusive
        println(x)
    }
}

#Output

0
1
2

#Code

fun main() {
    for ( x in 0..10 step 2 ){
        println(x)
    }
}

#Output

0
2
4
6
8
10



#Code

fun main() {
    for ( x in 4 downTo 0 ){
        println(x)
    }
}

#Output

4
3
2
1
0
